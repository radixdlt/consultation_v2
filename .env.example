# --- Local development ---
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/consultation
NETWORK_ID=2

# --- Self-hosted deployment (docker-compose.production.yml) ---

# PostgreSQL (not exposed outside Docker, but change the password anyway)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change-me
POSTGRES_DB=consultation

# Radix network (1 = mainnet, 2 = stokenet)
NETWORK_ID=2
VITE_PUBLIC_NETWORK_ID=2

# Your dApp definition address on the chosen network
VITE_PUBLIC_DAPP_DEFINITION_ADDRESS=

# Frontend environment (dev | staging | prod)
VITE_ENV=prod

# Poll interval in milliseconds (how often to check for new votes)
POLL_INTERVAL_MS=60000

# Poll lock timeout in seconds (prevents concurrent poll runs)
POLL_TIMEOUT_DURATION=120

# Public port exposed by nginx
PUBLIC_PORT=80
