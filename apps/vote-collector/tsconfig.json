{
	"compilerOptions": {
		"strict": true,
		"exactOptionalPropertyTypes": true,
		"noUnusedLocals": true,
		"noImplicitOverride": true,
		"moduleDetection": "force",
		"composite": false,
		"downlevelIteration": true,
		"resolveJsonModule": true,
		"esModuleInterop": false,
		"declaration": false,
		"sourceMap": true,
		"skipLibCheck": true,
		"moduleResolution": "bundler",
		"module": "ESNext",
		"target": "ES2022",
		"lib": ["ES2022"],
		"incremental": true,
		"noEmit": true,
		"plugins": [
			{
				"name": "@effect/language-service"
			}
		]
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.d.ts",
		"../../packages/shared/src/governance/makeVoteIndexKeys.test.ts"
	]
}
